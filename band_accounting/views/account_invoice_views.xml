<odoo>
    <record model="ir.ui.view" id="account_invoice_form_view">
        <field name="name">account.invoice.form (in band_accounting)</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="lead_id" />
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="account_invoice_supplier_form_view">
        <field name="name">account.invoice.form (in band_accounting)</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_bank_id']" position="after">
                <field name="lead_id" />
            </xpath>
            <xpath
                expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']"
                position="after"
            >
                <field name="prod_categ_id" />
            </xpath>
        </field>
    </record>
</odoo>
